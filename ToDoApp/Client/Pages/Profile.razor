@inherits ExtendedComponentBase

<PageTitle>Profile</PageTitle>

<EditForm Model="Model" >
	<FluentValidationValidator @ref="_fluentValidationValidator" />

	<div class="row">
		<div class="form-group col-lg-6 mb-4">
			<label for="FirstName" class="form-label">First Name</label>
			<InputText id="FirstName" class="form-control" @bind-Value="Model.FirstName" disabled="@IsReadyOnly" />
			<ValidationMessage For="(() => Model.FirstName)" />
		</div>
		<div class="form-group col-lg-6 mb-4">
			<label for="LastName" class="form-label">Last Name</label>
			<InputText id="LastName" class="form-control" @bind-Value="Model.LastName" disabled="@IsReadyOnly" />
			<ValidationMessage For="(() => Model.LastName)" />
		</div>
		<div class="form-group col-lg-6 mb-4">
			<label for="Email" class="form-label">Email</label>
			<InputText id="Email" class="form-control" @bind-Value="Model.Email" disabled="@IsReadyOnly"  />
			<ValidationMessage For="(() => Model.Email)" />
		</div>
		<div class="form-group col-lg-6 mb-4">
			<label for="Address" class="form-label">Address</label>
			<InputText id="Address" class="form-control" @bind-Value="Model.Address" disabled="@IsReadyOnly"  />
			<ValidationMessage For="(() => Model.Address)" />
		</div>
		<div class="form-group col-lg-6 mb-4">
			<label for="PostalCode" class="form-label">PostalCode</label>
			<InputText id="PostalCode" class="form-control" @bind-Value="Model.PostalCode" disabled="@IsReadyOnly"  />
			<ValidationMessage For="(() => Model.PostalCode)" />
		</div>
		<div class="form-group col-lg-6 mb-4">
			<label for="City" class="form-label">City</label>
			<InputText id="City" class="form-control" @bind-Value="Model.City" disabled="@IsReadyOnly"  />
			<ValidationMessage For="(() => Model.City)" />
		</div>
		<div class="form-group col-lg-6 mb-4">
			<label for="Country" class="form-label">Country</label>
			<InputText id="Country" class="form-control" @bind-Value="Model.Country" disabled="@IsReadyOnly"  />
			<ValidationMessage For="(() => Model.Country)" />
		</div>
		<div class="form-group col-lg-6 mb-4">
		<label for="Image" class="form-label">Image</label>
			<InputText id="Image" class="form-control" @bind-Value="Model.Image" disabled="@IsReadyOnly" />
		</div>
		@* <div class="form-group col-lg-6 mb-4">
			<label for="UploadImage" class="form-label">Upload Image</label>
			<InputFile id="UploadImage" class="form-control" accept="image/jpeg" OnChange="UploadImage" hidden />
			<input type="text" id="uploadInput" class="form-control rounded-start-0" disabled="@IsUploading" @bind="UploadFileName" />
		</div>  *@

		@* <div class="form-group col-lg-6 mb-4">
			<img src="@UploadedImage" alt="Profile Image" class="img-thumbnail" />
		</div> *@
	</div>
	<div class="row gx-1 justify-content-end">
		@if (IsReadyOnly)
		{
			<div class="col-auto py-1"><button type="button" class="btn btn-primary" @onclick="Edit">@Resource.btn_Edit</button></div>
		}
		else
		{
			<div class="col-auto py-1"><button type="button" class="btn btn-secondary" @onclick="Cancel">@Resource.btn_Cancel</button></div>
			<div class="col-auto py-1"><button type="submit" class="btn btn-primary" @onclick="Save">@Resource.btn_Save</button></div>
		}
	</div>
</EditForm>